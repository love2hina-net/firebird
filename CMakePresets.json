{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/bin/build/${presetName}",
            "installDir": "${sourceDir}/bin/install/${presetName}"
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "macOS-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "arm64",
            "hidden": true,
            "architecture": {
                "value": "arm64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_APPLE_SILICON_PROCESSOR": "arm64"
            }
        },
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_APPLE_SILICON_PROCESSOR": "x86_64"
            }
        },
        {
            "name": "x86",
            "hidden": true,
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "FB_CONFIG": "release",
                "FB_DBG": ""
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "FB_CONFIG": "debug",
                "FB_DBG": "TRUE"
            }
        },
        {
            "name": "win-x64-debug",
            "displayName": "Windows x64 Debug",
            "inherits": [
                "windows-base",
                "x64",
                "debug"
            ]
        },
        {
            "name": "mac-arm64-debug",
            "displayName": "Mac ARM64 Debug",
            "inherits": [
                "macOS-base",
                "arm64",
                "debug"
            ]
        },
        {
            "name": "mac-x64-debug",
            "displayName": "Mac x64 Debug",
            "inherits": [
                "macOS-base",
                "x64",
                "debug"
            ]
        }
    ]
}